@using WebUI.domain.Model
@model RegisterViewModel

@{
    ViewBag.Title = "User Registration";
    }

<section>
    <div>
        <h1>
            Sign Up For a free ShEx Bank Account
        </h1>
    </div>
    <div>
        <form method="post" autocomplete="on">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group col-xl-4">
                <label asp-for="FirstName">First Name:</label>
                <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group col-xl-4">
                <label asp-for="LastName">Last Name:</label>
                <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group col-xl-4">
                <label asp-for="Email">Email:</label>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>

            <div class="form-group col-xl-4">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>

            <div class="form-group col-xl-4">
                <label asp-for="ConfirmPassword">Confirm Password:</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Password Confirmation" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

            </div>
            <p>Please Select account type</p>
            <div class="form-check">
                <input class="form-check-input" type="radio" value="Savings" name="flexRadioDefault">
                <label class="form-check-label" asp-for="AccountType">
                    Savings
                </label>
                <span asp-validation-for="LastName" class="text-danger"></span>

            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" value="Student" id="flexRadioDefault2" checked>
                <label class="form-check-label" asp-for="AccountType">
                    Student
                </label>
            </div>
            <button type="submit" class="btn btn-primary text-center">SUBMIT INPUT</button>

        </form>
    </div>


</section>


