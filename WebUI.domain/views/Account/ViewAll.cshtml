@using WebUI.domain.Model
@model List<User>

@{
    ViewData["Title"] = "Index";
}

<h1>Users</h1>
<div>
    <a class="btn btn-primary" asp-controller="Account" asp-action="EnrollUser">Add User</a>
    <a class="btn btn-primary" asp-controller="Account" asp-action="EnrollCustomer">Add Customer</a>
</div>


<form method="post" asp-action="DeleteUser" asp-controller="Account">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Full Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td> <a asp-controller="Account" asp-action="UpdateUser" asp-route-id="@user.Id" class="btn btn-primary">Update </a>
                    <td><button type="submit" asp-route-id="@user.Id" class="btn text-danger">Delete</button></td>
                </tr>
            }
        </tbody>
    </table>
</form>