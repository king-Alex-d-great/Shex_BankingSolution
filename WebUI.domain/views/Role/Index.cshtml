@using WebUI.domain.Controllers;
@model List<AppRole>

@{
    ViewData["Title"] = "Index";
}

<h1  class="homePage-start">Role Manager</h1>

<form method="post" asp-action="AddRole" asp-controller="Role">
    <div class="input-group">
        <input name="roleName" class="form-control w-25 col-xs-4">
        <span class="input-group-btn">
            <button class="btn btn-info">Add New Role</button>
        </span>
    </div>
</form>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role</th>
            <th>Date Created</th>
            <th>Creator</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td>@role.CreatedAt</td>
            <td>@role.CreatedBy</td>
            <td><a asp-controller="Role" asp-action="UpdateRole" asp-route-id="@role.Name" class="btn btn-info">Update</a></td>
            <td><a asp-controller="Role" asp-action="DeleteRole" class="btn btn-info" asp-route-id="@role.Name">Delete</a></td>
            
        </tr>
        }
    </tbody>
</table>



