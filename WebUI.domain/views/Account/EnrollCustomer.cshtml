@using WebUI.domain.Model
@using OnlineBanking.Domain.Enumerators
@model EnrollCustomerViewModel
@{
    ViewBag.Title = "Add User";
}

<section>
    <div>
        <h1>
            Add User
        </h1>
    </div>
    <div>
        <form method="post" autocomplete="on">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group col-xl-4">

                <label asp-for="Birthday">First Name:</label>
                <input type="date" asp-for="Birthday" class="form-control" placeholder="Birthdate" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>

            <div class="form-group col-xl-4">
                <div class="editor-field">
                    @Html.DropDownList("Gender", new List<SelectListItem>{
                    new SelectListItem{ Text="Male", Value=Gender.Male.ToString()},
                    new SelectListItem{ Text="Female", Value=Gender.Female.ToString()},
                    new SelectListItem{ Text="Prefer Not to say", Value=Gender.PreferNotToSay.ToString()}
                    }, "--- Select Gender---"
                    )
                </div>
            </div>
            
            <div class="form-group col-xl-4">
                <div class="editor-field">
                    @Html.DropDownList("AccountType", new List<SelectListItem>{
                    new SelectListItem{ Text="Student", Value= AccountType.Student.ToString()},
                    new SelectListItem{ Text="Saving", Value=AccountType.Savings.ToString()}
                    }, "--- Select Account type---"
                    )
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary text-center">Add User</button>

        </form>
    </div>

</section>
