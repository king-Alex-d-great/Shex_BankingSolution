@using WebUI.domain.Model
@model LoginViewModel

@{
    ViewBag.Title = "User Login";
}

<section class="login-start templatemo-bg-image-1">
    <div class="container">
        <div class="col-md-12">
            <form class="form-horizontal templatemo-login-form-2" role="form" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="row">
                    <div class="col-md-12">
                        <h1>Holla, Awesome Person !</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="templatemo-one-signin col-md-6">
                        <div class="form-group">
                            <div class="col-md-12">
                                <label asp-for="Email" class="control-label">Username</label>
                                <div class="templatemo-input-icon-container">
                                    <i class="fa fa-user"></i>                                   
                                    <input type="text" asp-for="Email" class="form-control" placeholder="" />
                                    <span asp-validation-for="Email" class="text-white-50"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <label asp-for="Password" class="control-label">Password</label>
                                <div class="templatemo-input-icon-container">
                                    <i class="fa fa-lock"></i>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="">
                                    <span asp-validation-for="Password"  class="text-white-50"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="checkbox">
                                    <label asp-for="RememberMe">
                                        <input asp-for="RememberMe" type="checkbox"> Remember me
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="submit" value="LOG IN" class="btn btn-warning">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <a href="forgot-password.html" class="text-center">Cannot login?</a>
                            </div>
                        </div>
                    </div>
                    <div class="templatemo-other-signin col-md-6">
                        <label class="sm-label margin-bottom-15">
                            One-click sign in using other services. 
                        </label>
                        <a class="btn btn-block btn-social facebook btn-facebook margin-bottom-15">
                            <i class="fa fa-facebook"></i> Sign in with Facebook
                        </a>
                        <a class="btn btn-block btn-social twitter btn-twitter margin-bottom-15">
                            <i class="fa fa-twitter"></i> Sign in with Twitter
                        </a>
                        <a class="btn btn-social plus ">
                            <i class="fa fa-google-plus"></i> Sign in with Google                           
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>


