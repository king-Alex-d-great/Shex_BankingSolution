@model List<AppRole>

@{
    ViewData["Title"] = "Index";
}

<h1>Role Manager</h1>
<form method="post" asp-action="AddRole" asp-controller="Role">
    <div class="input-group">
        <input name="roleName" class="form-control w-25">
        <span class="input-group-btn">
            <button class="btn btn-info">Add New Role</button>
        </span>
    </div>
</form>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role</th>
            <th>Date Created</th>
            <th>Creator</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>@role.CreatedAt</td>
                <td>@role.CreatedBy</td>
                <td>
                    @*//should hold a dropdown list -- get, delete, update*@
                    @**@@*<a class="btn btn-primary" asp-controller="Account" asp-action="Update" asp-route-userId="@user.UserId">Manage User</a>*@

                    <div class="dropdown">
                        <button class="dropbtn">Manage Role</button>
                        <div class="dropdown-content">
                            <a  asp-controller="Role" asp-action="UpdateUser">Update</a>                           
                            <a  asp-controller="Role" asp-action="DeleteUser">Delete</a>                            
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>