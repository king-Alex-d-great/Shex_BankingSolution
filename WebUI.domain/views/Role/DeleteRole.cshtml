@using OnlineBanking.Domain.Model
@model EditRoleViewModel

@{
    ViewData["Title"] = "Delete Role";
}

<form method="post" asp-action="DeleteRole" asp-controller="Role">
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label">Please Re Enter Role Name</label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
        </div>
            <button class="btn btn-info">Delete Role</button>
    </div>
</form>